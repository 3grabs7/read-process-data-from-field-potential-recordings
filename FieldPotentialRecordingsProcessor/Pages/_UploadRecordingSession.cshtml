@model FieldPotentialRecordingsProcessor.Pages.IndexModel

@{
}

<!-- Upload csv file -->
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading"><strong>Upload Files</strong> <small>supported: <i>.csv</i></small></div>
        <div class="panel-body">
            <h4>Select files from your computer</h4>
            <form method="post" enctype="multipart/form-data" asp-page-handler="UploadRecordingSession">
                <div class="form-inline">
                    <div class="form-group">
                        <input type="file" accept=".csv" asp-for="Upload" multiple>
                    </div>
                    <div class="form-group">
                        <label asp-for="Separator" class="control-label"></label>
                        <input asp-for="Separator" class="form-control" />
                        <label asp-for="LineSeparator" class="control-label"></label>
                        <input asp-for="LineSeparator" class="form-control" />
                        <!--<span asp-validation-for="RawData.Ch1Stim1" class="text-danger"></span>-->
                    </div>
                    <button type="submit" class="btn btn-sm btn-primary" id="js-upload-submit">Upload files</button>
                </div>
            </form>

            <!-- Uploaded Successfull -->
            <div>
                <h3>Processed files</h3>
